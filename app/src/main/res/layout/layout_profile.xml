<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#90EE90"
        android:padding="25dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pic_8"/>

        <TextView
            android:id="@+id/textViewReceiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Chinmayee Gade"
            android:textColor="#100"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/et_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subtext"
            android:textAlignment="center"
            android:textColor="#100"
            android:textColorHint="#100" />


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/pic_5"
            android:layout_gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/imageView11"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:hint="About Me"
            android:textAlignment="center"
            android:textColor="#100"
            android:textColorHint="#100" />

        <EditText
            android:id="@+id/et_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="My Carbon Footprint"
            android:textAlignment="center"
            android:textColor="#100"
            android:textColorHint="#100" />

        <EditText
            android:id="@+id/et_3"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:hint="My Website/Blog"
            android:textAlignment="center"
            android:textColor="#100"
            android:textColorHint="#100" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="My Contributions"
            android:gravity="center"
            android:textColor="#100"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="10\nIdeas"
                android:textColor="#ED0A0A" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="1\nArticle"
                android:gravity="center"
                android:textColor="#ED0A0A"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="4\nAnswers"
                android:textColor="#ED0A0A" />

        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>