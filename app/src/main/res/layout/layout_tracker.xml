<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90EE90">

    <LinearLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90EE90"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="-46dp"
        tools:layout_editor_absoluteY="308dp">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pic_8"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Daily Self Habit Tracker"
            android:textColor="#100"
            android:textSize="25dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:hint="Number of\nwaste articles\nrecycled today:"
                android:textAlignment="center"
                android:textColor="#6bfff7" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="🗑"
                android:textSize="75dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="🚙🛵"
                android:textSize="75dp" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:hint="Kilometers\ntravelled today\nusing a vehicle:"
                android:textAlignment="center"
                android:textColor="#6bfff7" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:hint="Amount of\nunused data\ndeleted today:"
                android:textAlignment="center"
                android:textColor="#E10828" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="📱💻"
                android:textSize="75dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="🛍️"
                android:textSize="75dp" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:hint="Number of\nplastic articles\nbought today: "
                android:textAlignment="center"
                android:textColor="#F10629" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:hint="Number of\ntrees planted or\nwatered today:"
                android:textAlignment="center"
                android:textColor="#6bfff7" />

            <TextView
                android:id="@+id/textVew7"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="🌱"
                android:textSize="75dp" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>